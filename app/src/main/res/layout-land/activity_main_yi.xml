<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_title"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_logo" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/ivIcon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/ivIcon"
            android:paddingTop="@dimen/dp10"
            android:src="@drawable/title" />

        <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/btn_help_normal" />

        <ImageView
            android:id="@+id/ivHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp10"
            android:visibility="gone"
            android:layout_toLeftOf="@id/ivSetting"
            android:src="@drawable/btn_home" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp12"
            android:layout_marginRight="@dimen/dp12"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_weight="4"
            android:background="@drawable/frame_left"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp10"
            android:paddingRight="@dimen/dp10">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_rounded_gray_bg"
                android:orientation="vertical"
                android:padding="@dimen/dp5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llDianChi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_cyan_normal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp5"
                                android:text="电\n池"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12" />

                            <padd.qlckh.cn.tempad.roundimageview.RoundedImageView
                                android:layout_width="@dimen/dp19"
                                android:layout_height="@dimen/dp19"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/dp2"
                                android:layout_marginBottom="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/dianchi"
                                app:riv_oval="true" />

                            <ImageView
                                android:layout_width="@dimen/dp56"
                                android:layout_height="@dimen/dp55"
                                android:layout_gravity="right"
                                android:padding="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/code" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llBoli"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_blue_normal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp5"
                                android:text="玻\n璃"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12" />

                            <padd.qlckh.cn.tempad.roundimageview.RoundedImageView
                                android:layout_width="@dimen/dp19"
                                android:layout_height="@dimen/dp19"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/dp2"
                                android:layout_marginBottom="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/boli"
                                app:riv_oval="true" />

                            <ImageView
                                android:layout_width="@dimen/dp56"
                                android:layout_height="@dimen/dp55"
                                android:layout_gravity="right"
                                android:padding="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/code" />

                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp25"
                    android:layout_marginBottom="@dimen/dp50"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/llJishu"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_orange_normal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp5"
                                android:text="金\n属"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12" />

                            <padd.qlckh.cn.tempad.roundimageview.RoundedImageView
                                android:layout_width="@dimen/dp19"
                                android:layout_height="@dimen/dp19"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/dp2"
                                android:layout_marginBottom="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/jinshu"
                                app:riv_oval="true" />

                            <ImageView
                                android:layout_width="@dimen/dp56"
                                android:layout_height="@dimen/dp55"
                                android:layout_gravity="right"
                                android:padding="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/code" />

                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llSuliao"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/dp5"
                        android:paddingBottom="@dimen/dp5">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_green_normal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp5"
                                android:text="塑\n料"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp12" />

                            <padd.qlckh.cn.tempad.roundimageview.RoundedImageView
                                android:layout_width="@dimen/dp19"
                                android:layout_height="@dimen/dp19"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="@dimen/dp2"
                                android:layout_marginBottom="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/suliao"
                                app:riv_oval="true" />

                            <ImageView
                                android:layout_width="@dimen/dp56"
                                android:layout_height="@dimen/dp55"
                                android:layout_gravity="right"
                                android:padding="@dimen/dp2"
                                android:scaleType="centerCrop"
                                android:src="@drawable/code" />

                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_frame"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@drawable/frame_right" />
    </LinearLayout>
</RelativeLayout>