<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pic_save"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/dp120"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="提示"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp26"
            android:layout_marginTop="@dimen/dp15"
            android:layout_marginRight="@dimen/dp26"
            android:background="@drawable/shape_solid_gray_f7_corner_5"
            android:gravity="left|center_vertical"
            android:hint="请输入正确的密码"
            android:inputType="numberPassword"
            android:maxLength="16"
            android:padding="@dimen/dp8"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="14sp"
            tools:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/bg_pic_save_down_shape"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="否"
            android:textColor="#666666"
            android:textSize="16sp" />

        <View
            android:id="@+id/view"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#d8d8d8" />

        <TextView

            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:text="是"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:visibility="visible" />

    </LinearLayout>

</LinearLayout>